{
	"name": "Split Calculator",
	"description": "Split Calculator Chrome App.",
	"version": "0.1",
	"manifest_version": 2,
	"default_locale": "en",
	"author": "Aaron Lim",
	"app": {
		"background": {
			"scripts": ["background.js"]
		},
		"content_scripts": [{
			"css": ["window.css"],
			"js": ["jquery-3.0.0.min.js", "split_calc.js"]
		}]
	},
	"content_security_policy": "[default-src 'self'; script-src 'self']",
	"icons": { "16": "icons/calculator-16.png", "128": "icons/calculator-128.png"}
}
